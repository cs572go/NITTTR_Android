<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral80"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="409dp"
        android:layout_height="60dp"
        android:background="@color/material_dynamic_neutral99"
        android:gravity="center"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/callBtn"
            style="@style/Widget.Material3.Button"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_neutral_variant10"
            android:onClick="callClick"
            android:text="Call"
            android:textAlignment="center"
            android:textSize="11sp" />

        <Button
            android:id="@+id/smsBtn"
            style="@style/Widget.Material3.Button"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_neutral_variant10"
            android:onClick="smsClick"
            android:text="SMS"
            android:textAlignment="center"
            android:textSize="11sp" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.Material3.Button"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_neutral_variant10"
            android:onClick="alarmClick"
            android:text="Alarm"
            android:textAlignment="center"
            android:textSize="11sp" />

        <Button
            android:id="@+id/timerBtn"
            style="@style/Widget.Material3.Button"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_neutral_variant10"
            android:onClick="timerClick"
            android:text="Timer"
            android:textAlignment="center"
            android:textSize="11sp" />

        <Button
            android:id="@+id/pageBtn"
            style="@style/Widget.Material3.Button"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_neutral_variant10"
            android:onClick="pageClick"
            android:text="Page"
            android:textAlignment="center"
            android:textSize="11sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/phno1"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="368dp"
        android:layout_height="68dp"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999" />

</androidx.constraintlayout.widget.ConstraintLayout>